extend type Query {
    issue(id: ID!):Issue!
}

type Issue implements Node {
    id: ID!
    createdAt: Time!
    updatedAt: Time!
    subject: String
    status: String!
    priority: String
    description: String
    tags: [Tag] @goField(forceResolver: true)
    mentionedByNotes: [Note!]! @goField(forceResolver: true)
    interactionEvents: [InteractionEvent!]! @goField(forceResolver: true)
}

type IssueSummaryByStatus {
    status: String!
    count: Int64!
}
