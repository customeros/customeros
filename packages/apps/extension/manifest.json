{
  "manifest_version": 3,
  "name": "CustomerOS",
  "version": "1.0",
  "permissions": [
    "cookies",
    "tabs",
    "storage",
    "scripting",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "assets/customeros.png",
    "48": "assets/customeros.png",
    "128": "assets/customeros.png"
  },
  "browser_action": {
    "default_icon": "assets/customeros.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "https://localhost/*",
        "https://app.customeros.ai/*"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "host_permissions": [
    "https://app.customeros.ai/*",
    "https://bas.customeros.ai/*",
    "http://localhost:5173/*",
    "https://localhost:5173/*",
    "https://www.linkedin.com/*"
  ]
}