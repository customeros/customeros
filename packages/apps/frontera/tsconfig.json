{
  "compilerOptions": {
    "target": "ES2021",
    "useDefineForClassFields": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "@ui/*": ["src/ui/*"],
      "@shared/*": ["src/routes/src/*"],
      "@assets/*": ["src/assets/*"],
      "@store/*": ["src/store/*"],
      "@graphql/types": ["src/routes/src/types/__generated__/graphql.types.ts"],
      "@organizations/*": ["src/routes/organizations/src/*"],
      "@renewals/*": ["src/routes/renewals/src/*"],
      "@organization/*": ["src/routes/organization/src/*"],
      "@utils/*": ["src/utils/*"],
      "@settings/*": ["src/routes/settings/src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
