---
import PageSection from "../pageSection.astro";
import Feature from "./card.astro";
---

<PageSection size={"24"} id="stack">
  <div class="mx-auto max-w-7xl px-4 pb-12 text-cos-green-100 sm:px-6 lg:px-8">
    <div class="mb-10 md:text-center">
      <h2
        class="text-xl font-semibold text-cos-green-200 md:text-2xl lg:text-2xl"
      >
        Subheading
      </h2>
      <h3
        class="mt-2 text-3xl font-bold tracking-tight text-cos-green-50 md:text-5xl lg:text-5xl"
      >
        ...big heading
      </h3>
      <p class="mt-4 text-base text-cos-green-200 md:text-lg">
        Subtext
      </p>
    </div>
    <div>
      <div
        class="space-y-10 sm:grid sm:grid-flow-col sm:grid-cols-2 sm:grid-rows-3 sm:gap-x-6 sm:gap-y-14 sm:space-y-0 md:grid-cols-3 md:grid-rows-2 lg:gap-x-8"
      >
        <Feature title="title" href="link">
          <svg
          >
            <title>Title of svg</title>
            <path>
            </path>
          </svg>

          <Fragment slot="description">
            Description in fragment
          </Fragment>
        </Feature>
        
      </div>
    </div>
  </div>
</PageSection>
