{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "jsx": "preserve",
    "types": ["@astrojs/image/client"],
    // Skip type checking of external libraries.
    "skipLibCheck": true,
    "importsNotUsedAsValues": "preserve" // fixed through linting
  },
  "include": [
    "src",
    "astro.config.mjs",
    ".eslintrc.cjs",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "../reset.d.ts",
    "./tailwind.config.ts"
  ]
}
