{
  "compilerOptions": {
    "rootDir": "/",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@spaces/atoms/*": ["components/ui-kit/atoms/*"],
      "@spaces/molecules/*": ["components/ui-kit/molecules/*"],
      "@spaces/organisms/*": ["components/ui-kit/organisms/*"],
      "@spaces/layouts/*": ["components/ui-kit/layouts/*"],
      "@spaces/ui-kit/*": ["components/ui-kit/*"],
      "@spaces/contact/*": ["components/contact/*"],
      "@spaces/finder/*": ["components/finder/*"],
      "@spaces/organization/*": ["components/organization/*"],
      "@spaces/hooks/*": ["hooks/*"],
      "@spaces/graphql": ["graphQL/__generated__/generated.ts"],
      "@spaces/ui/*": ["ui/*"],
      "@ui/*": ["ui/*"],
      "@spaces/utils/*": ["utils/*"],
      "@spaces/globalState/*": ["state/*"],
      "@shared/components/*": ["app/components/*"],
      "@shared/util/*": ["app/util/*"],
      "@shared/types/*": ["app/types/*"],
      "@graphql/types": ["app/types/__generated__/graphql.types.ts"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
